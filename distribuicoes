    <div class="box">
      <h2>Tabela de Distribui√ß√µes</h2>
      <table>
        <thead>
          <tr>
            <th>Distribui√ß√£o</th>
            <th>Tipo</th>
            <th>Fun√ß√£o</th>
            <th>Dom√≠nio</th>
            <th>Par√¢metros</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Bernoulli</td>
            <td>Discreta</td>
            <td>$$P(X=x) = p^x(1-p)^{1-x}$$</td>
            <td>$$x \in \{0,1\}$$</td>
            <td>$$0 \leq p \leq 1$$</td>
          </tr>
          <tr>
            <td>Binomial</td>
            <td>Discreta</td>
            <td>$$P(X=x) = \binom{n}{x}p^x(1-p)^{n-x}$$</td>
            <td>$$x=0,1,...,n$$</td>
            <td>$$n \in \mathbb{N},\; 0 \leq p \leq 1$$</td>
          </tr>
          <tr>
            <td>Poisson</td>
            <td>Discreta</td>
            <td>$$P(X=x) = \frac{e^{-\lambda}\lambda^x}{x!}$$</td>
            <td>$$x \in \{0,1,2,...\}$$</td>
            <td>$$\lambda > 0$$</td>
          </tr>
          <tr>
            <td>Uniforme</td>
            <td>Cont√≠nua</td>
            <td>$$f(x) = \frac{1}{b-a}$$</td>
            <td>$$a \leq x \leq b$$</td>
            <td>$$a < b$$</td>
          </tr>
          <tr>
            <td>Exponencial</td>
            <td>Cont√≠nua</td>
            <td>$$f(x) = \lambda e^{-\lambda x}$$</td>
            <td>$$x \geq 0$$</td>
            <td>$$\lambda > 0$$</td>
          </tr>
          <tr>
            <td>Normal</td>
            <td>Cont√≠nua</td>
            <td>$$f(x) = \frac{1}{\sqrt{2\pi}\sigma}e^{-\frac{(x-\mu)^2}{2\sigma^2}}$$</td>
            <td>$$x \in \mathbb{R}$$</td>
            <td>$$\mu \in \mathbb{R},\; \sigma>0$$</td>
          </tr>
          <tr>
            <td>Beta</td>
            <td>Cont√≠nua</td>
            <td>$$f(x) = \frac{x^{\alpha-1}(1-x)^{\beta-1}}{B(\alpha,\beta)}$$</td>
            <td>$$0 < x < 1$$</td>
            <td>$$\alpha,\beta > 0$$</td>
          </tr>
          <tr>
            <td>Gama</td>
            <td>Cont√≠nua</td>
            <td>$$f(x) = \frac{x^{k-1}e^{-x/\theta}}{\Gamma(k)\theta^k}$$</td>
            <td>$$x > 0$$</td>
            <td>$$k,\theta > 0$$</td>
          </tr>
        </tbody>
      </table>
