  <script>
    // --- Script para o Gr√°fico Interativo da Distribui√ß√£o Normal ---
    const ctx = document.getElementById('normalDistChart').getContext('2d');
    const meanSlider = document.getElementById('meanSlider');
    const stdDevSlider = document.getElementById('stdDevSlider');
    const meanValue = document.getElementById('meanValue');
    const stdDevValue = document.getElementById('stdDevValue');

    let chart;

    // Fun√ß√£o para calcular a densidade de probabilidade da Normal
    function normalPDF(x, mu, sigma) {
        return (1 / (sigma * Math.sqrt(2 * Math.PI))) * Math.exp(-0.5 * Math.pow((x - mu) / sigma, 2));
    }

    function generateChartData(mu, sigma) {
        const labels = [];
        const data = [];
        // Gera pontos para o gr√°fico. O intervalo do eixo x se adapta ao desvio padr√£o.
        for (let x = mu - 4 * sigma; x <= mu + 4 * sigma; x += (8 * sigma) / 100) {
            labels.push(x.toFixed(2));
            data.push(normalPDF(x, mu, sigma));
        }
        return { labels, data };
    }

    function createOrUpdateChart() {
        const mu = parseFloat(meanSlider.value);
        const sigma = parseFloat(stdDevSlider.value);

        meanValue.textContent = mu;
        stdDevValue.textContent = sigma;

        const { labels, data } = generateChartData(mu, sigma);

        if (chart) {
            chart.data.labels = labels;
            chart.data.datasets[0].data = data;
            chart.update();
        } else {
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Densidade de Probabilidade',
                        data: data,
                        borderColor: 'var(--secondary-color)',
                        backgroundColor: 'rgba(37, 117, 252, 0.2)',
                        borderWidth: 3,
                        fill: true,
                        pointRadius: 0, // Oculta os pontos nos dados
                        tension: 0.4 // Deixa a curva mais suave
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Densidade' }
                        },
                        x: {
                            title: { display: true, text: 'Valores (x)' }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }
    }
    
    // Event Listeners para os sliders
    meanSlider.addEventListener('input', createOrUpdateChart);
    stdDevSlider.addEventListener('input', createOrUpdateChart);

    // Gera o gr√°fico inicial quando a p√°gina carrega
    window.onload = createOrUpdateChart;
  </script>

